<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:text="Appearance"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20sp"
                android:onClick="radiobtnclicked"
                android:text="Dark"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radio_light"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_marginStart="20sp"
                android:checked="false"
                android:onClick="radiobtnclicked"
                android:text="Light"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radio_system"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_marginStart="20sp"
                android:checked="true"
                android:onClick="radiobtnclicked"
                android:text="Device Default"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:text="Auto Save"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/autosave_on"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20sp"
                android:onClick="autosave_btn_clicked"
                android:text="On"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/autosave_off"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:layout_marginStart="20sp"
                android:checked="true"
                android:onClick="autosave_btn_clicked"
                android:text="Off"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:text="About"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A Simple Notepad App \nMade by Bhuvan"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/appversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:textSize="16sp"
            android:layout_marginBottom="10sp"/>
    </LinearLayout>
</LinearLayout>